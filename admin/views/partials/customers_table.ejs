<main class="col-md-8 ms-sm-auto col-lg-10 px-md-4">
  <div class="table-responsive">
    <div class="table-wrapper">
      <div class="table-title">
        <div class="row">
          <div class="col-sm-5">
            <h2>Customers</h2>
          </div>
          <div class="col-sm-7">
            <a href="#" class="btn btn-secondary"><i class="material-icons">&#xE147;</i> <span>Add New
                Customer</span></a>
            <a href="#" class="btn btn-secondary"><i class="material-icons">&#xE24D;</i> <span>Export to
                Excel</span></a>
          </div>
        </div>
      </div>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>City</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% arrCustomers.forEach((customer, idx)=> { %>
            <tr>
              <td>
                <%= customer.customerNumber %>
              </td>
              <td>
                <a href="/customers/info/<%=customer.customerNumber%>">
                  <%= customer.customerName %>
                </a>
              </td>
              <td>
                <%= customer.city %>
              </td>
              <td>
                <a href="/customers/products/<%=customer.customerNumber%>" class="product_list" title="Check"
                  data-toggle="tooltip"><i class="material-icons">&#x2713;</i></a>
                <a href="#" class="settings" title="Settings" data-toggle="tooltip"><i
                    class="material-icons">&#xE8B8;</i></a>
                <a href="#" class="delete" title="Delete" data-toggle="tooltip"><i
                    class="material-icons">&#xE5C9;</i></a>
              </td>
            </tr>
            <% }); %>
        </tbody>
      </table>
      <div class="clearfix">
        <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
        <ul class="pagination">
          <li class="page-item disabled"><a href="#">Previous</a></li>
          <li class="page-item"><a href="#" class="page-link">1</a></li>
          <li class="page-item"><a href="#" class="page-link">2</a></li>
          <li class="page-item active"><a href="#" class="page-link">3</a></li>
          <li class="page-item"><a href="#" class="page-link">4</a></li>
          <li class="page-item"><a href="#" class="page-link">5</a></li>
          <li class="page-item"><a href="#" class="page-link">Next</a></li>
        </ul>
      </div>
    </div>
  </div>
</main>